# App launcher.
ctrl + space
	rofi -show drun

# Terminal emulator.
super + Return
	alacritty

# Browser.
super + b
	firefox

# File manager.
super + e
	alacritty --command lf

# System monitor.
super + u
	alacritty --command btop

# Music player.
super + m
	launchmusicplayer

# Power menu.
super + shift + p
	powermenu

# Calculator menu.
super + shift + c
	calc

# Emoji selection menu.
super + shift + e
	rofi -show emoji

# Screenshot.
@Print
	screenshot

# Screenshot of selected area.
shift + @Print
	screenshot select

# Screenshot of focused window.
ctrl + @Print
	screenshot window

# Lock screen.
F9
	lockscreen

# Increase volume.
XF86AudioRaiseVolume
	changevolume inc

# Decrease volume.
XF86AudioLowerVolume
	changevolume dec

# Toggle mute.
XF86AudioMute
	changevolume toggle

# Increase brightness.
XF86MonBrightnessDown
	changebrightness dec

# Decrease brightness.
XF86MonBrightnessUp
	changebrightness inc
